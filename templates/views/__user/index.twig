{% extends "views/skeleton.twig" %}
{% use "components/navbar.twig" with navbar as Navbar %}
{% use "components/change_password.twig" with changePasswordModal as ChangePassword %}

{% set user = user|merge({password: '********'}) %}

{% block content %}
    {% block navbar %}
        {{ block('Navbar') }}
    {% endblock %}

    <div class="d-flex min-vh-100">
        <div class="container shadow min-vh-100 position-fixed d-flex justify-content-center align-items-center" style="width: 15% !important">
            <div class="container text-center">
                <ul class="navbar-nav">
                    <li class="nav-item py-3">
                        <a href="#general" class="link text-decoration-none link-secondary fw-bold">
                            <i class="bi bi-gear"></i> General
                        </a>
                    </li>
                    <li class="nav-item py-3">
                        <a href="#privacy" class="link text-decoration-none link-secondary fw-bold">
                            <i class="bi bi-shield-lock"></i> Privacy
                        </a>
                    </li>
                    <li class="nav-item py-3">
                        <a href="#misc" class="link text-decoration-none link-secondary fw-bold">
                            <i class="bi bi-folder"></i> Additional
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center">

            <div class="card shadow w-50">

                <div class="card-body">

                    <h4 class="card-title text-center w-100">General settings</h4>

                    <div class="row">

                        <div class="col">
                            <img src="/assets/img/ph200x200.jpg" class="rounded-circle" alt="">
                        </div>

                        <div class="col">
                            <form action="/api/user/update-account" method="POST" id="updateAccount">
                                <div class="mb-3 row">
                                    <label for="username" class="col-sm-4 col-form-label">Username</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="username" name="username" value="{{ user.username }}">
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="firstname" class="col-sm-4 col-form-label">Firstname</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="firstname" name="firstname" value="{{ user.firstname }}">
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="lastname" class="col-sm-4 col-form-label">Lastname</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="lastname" name="lastname" value="{{ user.lastname }}">
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="email" class="col-sm-4 col-form-label">Email</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="email" name="email" value="{{ user.email }}">
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="password" class="col-sm-4 col-form-label">Password</label>
                                    <div class="col-sm-8 d-flex align-items-center">
                                        <a class="link text-decoration-none text-center" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#changePasswordModal">Change password <i class="bi bi-pencil-square"></i></a>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-outline-primary">Update details</button>
                            </form>

                        </div>


                    </div>

                </div>

            </div>

        </div>

    </div>

    {% block changePasswordModal %}
        {{  block('ChangePassword') }}
    {% endblock %}


{% endblock %}
